define-behaviour Cst;;
define-method ({Cst cst} Convert) (
  Case: {cst} Of: (
    [[Adj: [l, r]]: [(l Convert) (r Convert)]],
    [[Tuple: cs]: (let cs* = map [x: x Convert] cs in {Tuple cs*})],
    [[Quote: v]: v],
    [_: cst]
  )
);;

